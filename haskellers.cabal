name:              haskellers
version:           0.3.0
license:           BSD3
license-file:      LICENSE
author:            Michael Snoyman
maintainer:        Michael Snoyman
synopsis:          The greatest Yesod web application ever.
description:       I'm sure you can say something clever here if you try.
category:          Web
stability:         Experimental
cabal-version:     >= 1.6
build-type:        Simple
homepage:          http://www.haskellers.com/

Flag production
    Description:   Build the production executable.
    Default:       False

Flag devel
    Default:       False

library
    if flag(devel)
        Buildable: True
    else
        Buildable: False
    exposed-modules: Application
    other-modules: Foundation
                   Model
                   Settings
                   StaticFiles
                   Handler.Admin
                   Handler.Bling
                   Handler.Email
                   Handler.Faq
                   Handler.Job
                   Handler.News
                   Handler.Package
                   Handler.Profile
                   Handler.Root
                   Handler.Skills
                   Handler.Team
                   Handler.Topic
                   Handler.User
                   SESCreds
    ghc-options:   -Wall -Werror -O0

executable         haskellers
    if flag(production)
        cpp-options:   -DPRODUCTION
        ghc-options:   -Wall -Werror -threaded
    else
        ghc-options:   -Wall -Werror -threaded -O0
    if flag(devel)
        Buildable:     False
    main-is:       main.hs
    build-depends: base >= 4 && < 5,
                   yesod == 0.10.*,
                   yesod-auth == 0.8.*,
                   yesod-auth-fb == 0.10.*,
                   authenticate >= 0.9.2.1,
                   wai-extra == 1.1.*,
                   directory,
                   conduit == 0.2.*,
                   bytestring,
                   persistent == 0.8.*,
                   persistent-template == 0.8.*,
                   persistent-postgresql == 0.8.*,
                   template-haskell,
                   hamlet,
                   fb,
                   shakespeare-js,
                   shakespeare-css,
                   parsec,
                   pureMD5 < 3,
                   http-conduit == 1.2.*,
                   random,
                   base64-bytestring,
                   cryptocipher,
                   time,
                   random-shuffle,
                   containers,
                   stm,
                   old-locale,
                   neither,
                   data-default,
                   mime-mail,
                   mime-mail-ses == 0.1.*,
                   text,
                   text-icu,
                   hjsmin,
                   utf8-string,
                   warp == 1.1.*,
                   yesod-core == 0.10.*,
                   yesod-form == 0.4.*,
                   yesod-newsfeed == 0.4.*,
                   yesod-static == 0.10.*,
                   monad-control,
                   blaze-html,
                   http-types,
                   aeson,
                   attoparsec >= 0.10,
                   system-fileio,
                   transformers,
                   blaze-builder
